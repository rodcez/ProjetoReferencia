
@model Liberty.Faturaveis.UI.ViewModel.LoginViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=9,chrome=1">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="shortcut icon" href="~/images/favicon.ico" />
    <link rel="stylesheet" href="~/css/theme.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.min.css" />
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.mask.min.js"></script>
    <script src="~/js/jquery.maskMoney.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/select2.full.min.js"></script>
    <script src="~/js/i18n/pt-BR.js"></script>

    <style type="text/css">

        .form-control-local {
            width: 200px;
            height: 34px;
            padding: 6px 12px;
            font-size: 14px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
            -webkit-transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
        }
    </style>


</head>

<body class="master-menu">
    <!--Cabeçalho-->
    <div class="header">
        <div class="header-principal">
            <div class="user-loginbar">

            </div>

            <div class="logo">
                @*<a href="https://meuespacocorretor.libertyseguros.com.br/">*@
                <a>
                    <img id="logoCombinado" src="@Url.Content("~/images/logo.png")" alt="Liberty" />
                </a>
                <h1>CCF - Cotador / Controlador Faturáveis</h1>
            </div>

        </div>
    </div>
    <!--./Cabeçalho-->
    <!--Corpo-->
    <div id="painel-direito">
        <div class="breadcrumbs">
            <div class="timer">
                <p></p>
            </div>
        </div>
        <div class="conteudo-principal">
            <br /><br /><br />
            <div class="container">
                <div class="box-form-conteudo" style="text-align:center;">
                    <form id="frmLogin" method="post"
                          data-ajax="true" data-ajax-method="post"
                          data-ajax-failure="onFailed" data-ajax-success="onSuccess" data-ajax-url="/Login" asp-antiforgery="false">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div id="Login">
                            <div>
                                @Html.Label("", "Login", new { id = "lblLogin" })
                                @Html.TextBoxFor(m => m.Usuario, "", new { @class = "form-control-local", placeholder = "Login", @style = "width: 200px;", @autocomplete = "username", value="x" })
                                @Html.ValidationMessageFor(m => m.Usuario, "Informe um usuario", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div id="Senha">
                            <div>
                                @Html.Label("", "Senha", new { id = "lblSenha" })
                                @Html.PasswordFor(m => m.Senha, new { @class = "form-control-local", placeholder = "Senha", @style = "width: 200px;", @autocomplete = "current-password" })
                                @Html.ValidationMessageFor(m => m.Senha, "Informe a senha", new { @class = "text-danger" })
                            </div>
                        </div>
                        <br />
                        <div id="linha-form-botoes" style="width: 96.5%; text-align: center;">
                            <input type="submit" id="btnEntrar" onclick="" class="btn btn-form-inline" value="LogIn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="rodape">
            <p>
                © 2015 Liberty Seguros S/A
            </p>
        </div>
    </div>
    <!--./Corpo-->

    <partial name="/Views/Shared/_Modals.cshtml" />

    <script src="~/js/site.min.js"></script>
    <script src="~/js/auth.min.js"></script>
</body>

</html>


